Cr-Commit-Position: refs/heads/master@{#408362}
---
 content/browser/BUILD.gn | 10 ++++++++--
 1 file changed, 8 insertions(+), 2 deletions(-)

diff --git a/content/browser/BUILD.gn b/content/browser/BUILD.gn
index 35b2f19..83c5903 100644
--- a/content/browser/BUILD.gn
+++ b/content/browser/BUILD.gn
@@ -279,9 +279,15 @@ source_set("browser") {
     configs += [
       "//build/config/linux/atk",
       "//build/config/linux/atk:warnings",
-      "//build/config/linux/gconf",
-      "//build/config/linux:glib",
     ]
+
+    if (use_gconf) {
+      configs += [ "//build/config/linux/gconf" ]
+    }
+
+    if (use_glib) {
+      configs += [ "//build/config/linux:glib" ]
+    }
   }
 
   if (is_linux && use_aura) {
